extends ../layout

block content
    h1.mb-5.mt-5.text-center= title

    .jumbotron.col-sm-8.offset-sm-2
        form(method='POST' action="http://localhost:8080/login")
            .form-group
                label Email
                input#email.form-control(
                    type="email", 
                    name="email")
            .form-group
                label Mot de passe
                input#password.form-control(
                    type="password"
                    name="password")
            input#submit.btn.btn-success(type="submit")