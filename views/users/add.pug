extends ../layout

block content
    h1.mb-5.mt-5.text-center= title


    .jumbotron.col-sm-8.offset-sm-2
        form(method='POST' action=action)
            .form-group
                label Pseudo
                input#pseudo.form-control(
                    type="text", 
                    name="pseudo"
                    value=user.pseudo)
            .form-group
                label Email
                input#email.form-control(
                    type="email", 
                    name="email"
                    value=user.email)
            if password
                .form-group
                    label Mot de passe
                    input#password.form-control(
                        type="password"
                        name="password")
            .form-group
                label Pr√©nom
                input#firstname.form-control(
                    type="text", 
                    name="firstname"
                    value=user.firstname)
            .form-group
                label Nom 
                input#lastname.form-control(
                    type="text", 
                    name="lastname"
                    value=user.lastname)
            input#submit.btn.btn-success(type="submit", value="Valider")